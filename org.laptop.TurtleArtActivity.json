{
    "app-id": "org.laptop.TurtleArtActivity",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "rename-desktop-file": "turtleblocks.desktop",
    "rename-icon": "turtleart",
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "command": "turtleblocks",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=ca.desrt.dconf",
        "--filesystem=home"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/info",
        "/share/man"
    ],
    "modules": [
        "shared-modules/intltool/intltool-0.51.json",
        {
            "name": "sugar-toolkit-gtk3",
            "no-parallel-make": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "http://download.sugarlabs.org/sources/sucrose/glucose/sugar-toolkit-gtk3/sugar-toolkit-gtk3-0.116.tar.xz",
                    "sha256": "745a360577efceb10f57ca4cbad5f9ec61f7ed6cc381eeb72422bbd7455b770b"
                }
            ]
        },
        "shared-modules/dbus-glib/dbus-glib-0.110.json",
        {
            "name": "python-dbus",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} dbus-python"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://dbus.freedesktop.org/releases/dbus-python/dbus-python-1.2.16.tar.gz",
                    "sha256": "11238f1d86c995d8aed2e22f04a1e3779f0d70e587caffeab4857f3c662ed5a4"
                }
            ]
        },
        {
            "name": "numpy",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} numpy"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/numpy/numpy/releases/download/v1.16.5/numpy-1.16.5.zip",
                    "sha256": "8bb452d94e964b312205b0de1238dd7209da452343653ab214b5d681780e7a0c"
                }
            ]
        },
        {
            "name": "decorator",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --exists-action=i --no-index --find-links=\"file://${PWD}\" --prefix=${FLATPAK_DEST} decorator"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://files.pythonhosted.org/packages/ba/19/1119fe7b1e49b9c8a9f154c930060f37074ea2e8f9f6558efc2eeaa417a2/decorator-4.4.0.tar.gz",
                    "sha256": "86156361c50488b84a3f148056ea716ca587df2f0de1d34750d35c21312725de"
                }
            ]
        },
        {
            "name": "telepathy-python",
            "no-parallel-make": true,
            "rm-configure": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://telepathy.freedesktop.org/releases/telepathy-python/telepathy-python-0.15.19.tar.gz",
                    "sha256": "244c0e1bf4bbd78ae298ea659fe10bf3a73738db550156767cc2477aedf72376"
                },
                {
                    "type": "patch",
                    "path": "telepathy-python-fix-build.patch"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vif"
                    ]
                }
            ]
        },
        {
            "name": "turtleblocks",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py --no-sugar install --prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/sugarlabs/turtleart-activity.git",
                    "commit": "986073ea5c660ad189863b4f4c1742c7839dc992"
                },
                {
                    "type": "patch",
                    "path": "turtleblock-app-prefix.patch"
                },
                {
                    "type": "patch",
                    "path": "turtleblocks-fix-expand.patch"
                },
                {
                    "type": "patch",
                    "path": "turtleblock-mime-icon-name.patch"
                }
            ],
            "post-install": [
                "glib-compile-schemas /app/share/TurtleBlocks",
                "install -D activity/turtleart.svg /app/share/icons/hicolor/scalable/apps/turtleart.svg",
                "install -D activity/application-x-turtle-art.svg /app/share/icons/hicolor/scalable/mimetypes/org.laptop.TurtleArtActivity-application-x-turtle-art.svg",
                "install -D activity/mimetypes.xml /app/share/mime/packages/org.laptop.TurtleArtActivity.xml"
            ]
        }
    ]
}
